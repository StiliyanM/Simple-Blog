@model PostBindingModel

@{
    ViewData["Title"] = "Delete Post";
}

<p>
    <h2>Delete Post</h2>

    <h2 class="text-danger">Are you sure you want to delete this post?</h2>
</p>
<div class="panel panel-default">
    <div class="panel-heading"><strong>@Model.Title</strong></div>
    <div class="panel-body">
        <p>@Model.Content</p>
    </div>
</div>
<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-light"
       asp-area=""
       asp-controller="Home"
       asp-action="Index">Cancel</a>
</form>

